            <fr:title text="Ejemplos de categorías">Ejemplos de categorías</fr:title>
            <fr:taxon>Ejemplos</fr:taxon>
            <fr:meta name="sources">
              <fr:link href="/category-theory-context-riehl/" title="Category Theory in Context" uri="https://juan-mad.github.io/category-theory-context-riehl/" display-uri="category-theory-context-riehl" type="local" />
            </fr:meta>

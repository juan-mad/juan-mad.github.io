                <fr:title text="Teorema de Stone-Weierstrass, caso real">Teorema de Stone-Weierstrass, caso real</fr:title>
                <fr:taxon>Teorema</fr:taxon>
              </fr:frontmatter>
              <fr:mainmatter>
